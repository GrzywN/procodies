---
import { Image } from 'astro:assets';
import HeroImageGallery from './HeroImageGallery.vue';
import HeroImageOriginalValue from './HeroImageOriginalValue.astro';
import mcAfeeSecureImage from '../../assets/images/icons/mcafee-secure.png';
import trusteVerifiedImage from '../../assets/images/icons/truste-verified.png';
import encryption256BitImage from '../../assets/images/icons/256-bit-encryption.png';
---

<section
  class="flex flex-col md:flex-row gap-4 items-center"
  aria-labelledby="hero-title"
>
  <div class="max-w-[30.375rem] w-full relative">
    <HeroImageGallery client:load />
    <div class="absolute top-0 right-0">
      <HeroImageOriginalValue />
    </div>
  </div>
  <article class="flex flex-col">
    <h1
      class="mb-2 font-sans font-extrabold text-[3.25rem] leading-[106%] text-primary-800 text-balance"
      id="hero-title"
    >
      Chance to win a StockX Mystery Box today!
    </h1>
    <h2
      class="mb-[1.4375rem] font-sans font-normal text-[1.375rem] leading-[1.6113rem] text-primary-800"
    >
      Unleash the Excitement of Mystery Electronics
    </h2>

    <!-- TODO: Consider additional validation based on pattern attribute and regex or VeeValidate. -->
    <form
      class="flex flex-col gap-4 p-6 border border-[#DBDBDB] rounded-[1.25rem]"
    >
      <h3
        class="font-sans font-medium text-[2rem] leading-[2.3438rem] text-primary-700 text-center"
      >
        Enter details
      </h3>
      <div class="flex flex-col gap-4">
        <div class="flex flex-wrap gap-4">
          <input
            class="flex-1 my-input"
            type="text"
            placeholder="First name"
            maxlength="50"
            autocomplete="given-name"
          />
          <input
            class="flex-1 my-input"
            type="text"
            placeholder="Last name"
            maxlength="50"
            autocomplete="family-name"
          />
        </div>
      </div>
      <input class="my-input" type="text" placeholder="Street" maxlength="50" />
      <div class="flex flex-wrap gap-4">
        <input
          class="flex-1 my-input"
          type="text"
          placeholder="Postal code"
          pattern="[0-9]{2}-[0-9]{3}"
          maxlength="6"
          autocomplete="postal-code"
        />
        <input
          class="flex-1 my-input"
          type="text"
          placeholder="City"
          maxlength="50"
          autocomplete="address-level2"
        />
      </div>
      <input
        class="my-input"
        type="tel"
        placeholder="Phone number"
        maxlength="20"
        autocomplete="tel"
      />
      <input
        class="my-input"
        type="email"
        placeholder="E-mail"
        maxlength="50"
        autocomplete="email"
      />

      <button
        class="mt-2 bg-[#006340] hover:bg-[#008c5b] text-white w-full px-4 py-3 rounded-[0.625rem] uppercase font-sans font-semibold text-base text-center transition-colors"
        type="submit">Proceed to payment</button
      >

      <div class="mx-auto h-10 flex flex-wrap gap-4">
        <Image src={mcAfeeSecureImage} alt="McAfee SECURE" loading="eager" />
        <Image
          src={trusteVerifiedImage}
          alt="TRUSTe VERIFIED"
          loading="eager"
        />
        <Image
          src={encryption256BitImage}
          alt="256 BIT ENCRYPTION"
          loading="eager"
        />
      </div>
    </form>
  </article>
</section>
